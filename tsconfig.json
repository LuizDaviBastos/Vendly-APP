{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "paths": {
      "prosemirror-mentions": [
        "projects/prosemirror-mentions/src"
      ],
      "ngx-editor": [
        "./projects/ngx-editor"
      ],
      "ngx-editor/utils": [
        "./projects/ngx-editor/utils"
      ],
      "ngx-editor/helpers": [
        "./projects/ngx-editor/helpers"
      ],
      "ngx-editor/schema": [
        "./projects/ngx-editor/schema"
      ],
      "ngx-editor/commands": [
        "./projects/ngx-editor/commands"
      ]
    },
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "module": "es2020",
    "lib": [
      "es2018",
      "dom"
    ],
    "skipLibCheck": true
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "strictTemplates": true
  }
}